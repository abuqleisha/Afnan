create or replace procedure total_salary
is
type arr1 is table of hr.employees.salary%type index by pls_integer;
type arr2 is table of hr.employees.employee_id%type index by pls_integer;

workdays_sal arr1;
v_emp_id arr2;

begin
    for i in 100 .. 150 loop
    select ((sysdate - trunc(sysdate,'month'))*(salary/30)),employee_id into workdays_sal(i),v_emp_id(i)
    from hr.employees
    where employee_id =i;
    
    dbms_output.put_line(v_emp_id(i)|| q'['s salary deserved is ]' || workdays_sal(i));
    end loop;
end;


execute total_salary 
